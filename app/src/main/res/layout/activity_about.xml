<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">


    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="24dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/CustomToolbarTheme"
            android:elevation="4dp"
            app:title="About"
            app:navigationIcon="?android:attr/homeAsUpIndicator" />

        <!-- App Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="32dp"
            android:background="@drawable/about_header_background"
            android:layout_marginBottom="24dp">

            <!-- App Icon/Logo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_app_logo"
                android:contentDescription="App Logo"
                android:layout_marginBottom="16dp" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Planner"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <!-- App Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Personal Productivity Companion"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="16dp" />

            <!-- Version Info -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="14sp"
                android:textColor="#95a5a6"
                android:background="@drawable/version_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- App Description Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/section_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About This App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity Planner helps you organize your tasks, set deadlines, and stay productive. With nice features and reminders, managing your daily activities has never been easier."
                android:textSize="16sp"
                android:textColor="#34495e"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/section_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feature_task"
                    android:contentDescription="Task Management"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smart Task Management with priority levels"
                    android:textSize="16sp"
                    android:textColor="#34495e" />

            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feature_calendar"
                    android:contentDescription="Calendar View"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calendar view for better planning"
                    android:textSize="16sp"
                    android:textColor="#34495e" />

            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feature_notification"
                    android:contentDescription="Smart Notifications"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smart reminders for upcoming deadlines"
                    android:textSize="16sp"
                    android:textColor="#34495e" />

            </LinearLayout>

            <!-- Feature 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feature_offline"
                    android:contentDescription="Offline Support"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Works offline with local data storage"
                    android:textSize="16sp"
                    android:textColor="#34495e" />

            </LinearLayout>

        </LinearLayout>

        <!-- Developer Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/section_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Development Team"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created with â¤ï¸ by Esether K"
                android:textSize="16sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Built using modern Android development with Kotlin."
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/section_background"
            android:layout_marginBottom="16dp">

            <!-- Rate App Button -->
            <Button
                android:id="@+id/btnRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â­ Rate This App"
                android:textAllCaps="false"
                android:backgroundTint="#3498db"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <!-- Share App Button -->
            <Button
                android:id="@+id/btnShareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤ Share With Friends"
                android:textAllCaps="false"
                android:backgroundTint="#27ae60"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <!-- Privacy Policy Button -->
            <Button
                android:id="@+id/btnPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ Privacy Policy"
                android:textAllCaps="false"
                android:backgroundTint="#95a5a6"
                android:textColor="#ffffff" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Activity Planner. All rights reserved."
            android:textSize="12sp"
            android:textColor="#bdc3c7"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>